{{#if user}}
  <div class="navmenu navmenu-inverse navmenu-fixed-left offcanvas">
    <a class="navmenu-brand" href="#/">Visualization Dashboard</a>
    <ul class="nav navmenu-nav">
      <li>
        <a class="navmenu-header" href="#/queries">
          Visualizations
        </a>
      </li>
    </ul>

    <ul id="queries" class="nav navmenu-nav">
      {{#each pdc_queries}}
        <li>
          <i class="fa fa-bar-chart" style="color:#AAAAAA">
            <a href="/visualization/{{title}}/{{../user.clinic}}/{{../user.clinician}}/"  data-toggle="tooltip" data-placement="right" title="{{title}}">{{description}}</a>
          </i>
        </li>
      {{/each}}
    </ul>

    <ul class="nav navmenu-nav">
      <li>
        <a class="navmenu-header" href="#/queries">
          Reports
        </a>
      </li>
    </ul>

    <ul id="queries" class="nav navmenu-nav">
      {{#each reports}}
      <li>
        <i class="fa fa-bar-chart" style="color:#AAAAAA">
          <a href="/report/{{shortTitle}}"  data-toggle="tooltip" data-placement="right" title="{{title}}">{{title}}</a>
        </i>
      </li>
      {{/each}}
    </ul>

    <ul id="queries" class="nav navmenu-nav">
        <li><a href="/logout">Log Out</a></li>
    </ul>
    <script>
      $(document).ready(function(){
        $('ul#queries > li > a').tooltip();
      });
    </script>
  </div>

  <div class="navbar navbar-default navbar-fixed-top">
    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
{{/if}}
